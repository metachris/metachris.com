{{ define "content" }}
  <section class="container list">
    <header>
      <div class="post-title">
        <h1 class="title">{{ .Title }}</h1>
      </div>
    </header>
    <ul>
      {{- range .Paginator.Pages -}}
        {{ if not .Params.hideInPostlist }}
          {{- .Render "li" -}}
        {{ end }}
      {{- end -}}
    </ul>

    {{ partial "pagination.html" . }}
  </section>
{{ end }}
